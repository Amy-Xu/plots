<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>METR</title>
    <link href="https://cdn.pydata.org/bokeh/release/bokeh-0.12.1.min.css" rel="stylesheet" />
    <script src="resources/jquery-2.2.3.min.js"></script>
    <link rel="stylesheet" href="resources/normalize.css" />
    <link rel="stylesheet" href="resources/ion.rangeSlider.css" />
    <link rel="stylesheet" href="resources/ion.rangeSlider.skinFlat.css" />
    <script src="resources/ion.rangeSlider.js"></script>
</head>

<style>
   h3 {
	text-align: left;
        font-family: Arial, Helvetica, sans-serif;
	margin-left:210px;
	color:#333333;
	margin-bottom:-15px;
   }
   
   h5 {
	text-align: left;
        font-family: Arial, Helvetica, sans-serif;
	margin-left:210px;
	color:#666666;
   }

   .slider-group {
	position: relative;
	margin: 15px;
	width:150px;
	text-align:center;
	margin: 15px auto;
	right: -130px;
	top: -65px;
   }

   .slider-group h6 {
        margin-top: 0px;
        margin-bottom: 0px;
        color: #6B6B73;
        font-weight:normal;
        margin:auto;
        vertical-align:middle;
   }

</style>

<body>
<script>
    $(function () {
	    window.data_sources = {{ data_sources | safe }};

	    var getRendererById = function(plotId, rendererId) {
		var renderers = Bokeh.index[Object.keys(Bokeh.index)[0]].child_views[plotId].model.renderers; 
		var renderer, i;
		for (i=0; i < renderers.length; i++) {
		   renderer = renderers[i];
		   if(renderer.id === rendererId) {
		      return renderer;
		   }
		}
	    };

	    var onSliderChange = function () {
		var slider1_val = $("#slider1").prop('value').toLowerCase();

		var equipment_renderer = getRendererById('{{ equipment_plot_id }}', '{{ equipment_renderer_id }}');
		var equipment_source = equipment_renderer.get('data_source');
		equipment_source.set('data', window.data_sources['equipment_mettr_c_' + slider1_val]);

		var structure_renderer = getRendererById('{{ structure_plot_id }}', '{{ structure_renderer_id }}');
		var structure_source = structure_renderer.get('data_source');
		structure_source.set('data', window.data_sources['structure_mettr_c_' + slider1_val]);
	    };

	    var $slider1 = $("#slider1");
	    $slider1.ionRangeSlider({
		    hide_min_max: true,
		    prettify_enabled: false,
		    values: ["2016", "2018", "2019", "2020"]
	    });
	    $slider1.on("change", onSliderChange);

    });
</script>

    <script type="text/javascript" src="https://cdn.pydata.org/bokeh/release/bokeh-0.12.1.min.js"></script>
    {{ bokeh_script | safe }}

    <div>
	    <h3>Going, Going, Gone: The Phaseout of Bonus Depreciation</h3>
	    <h5>Marginal Effective Total Tax Rates on Corporate Investments</h5>
            <div class="slider-group">
                <input id="slider1" type="text" id="range" value="" name="range" />
            </div>
	    	    {{ plots.metr | safe }}
    </div>
</body>
</html>
